<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="27sp"
        android:autoSizeMinTextSize="18sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="@string/sign_in_text"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@id/sign_in_g12"
        app:layout_constraintEnd_toEndOf="@id/sign_in_g2"
        app:layout_constraintStart_toStartOf="@id/sign_in_g1"
        app:layout_constraintTop_toTopOf="@id/sign_in_g11" />

    <!--    android:autoSizeMaxTextSize="24sp"-->
    <!--    android:autoSizeMinTextSize="10sp"-->
    <!--    android:autoSizeTextType="uniform"-->

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="@string/sign_in_description"
        app:layout_constraintBottom_toBottomOf="@id/sign_in_g14"
        app:layout_constraintEnd_toEndOf="@id/sign_in_g2"
        app:layout_constraintStart_toStartOf="@id/sign_in_g1"
        app:layout_constraintTop_toTopOf="@id/sign_in_g13" />

    <!--    android:autoSizeMaxTextSize="18sp"-->
    <!--    android:autoSizeMinTextSize="8sp"-->
    <!--    android:autoSizeTextType="uniform"-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="@id/sign_in_g6"
        app:layout_constraintEnd_toEndOf="@id/sign_in_g2"
        app:layout_constraintStart_toStartOf="@id/sign_in_g1"
        app:layout_constraintTop_toTopOf="@id/sign_in_g5"
        app:layout_constraintWidth_max="320dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="emailAddress"
            android:minHeight="48dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="emailAddress"
                android:hint="@string/email_address_label"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="password"
            android:minHeight="48dp"
            app:endIconMode="password_toggle"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password_label"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="4sp"
        android:autoSizeTextType="uniform"
        android:text="@string/sign_in_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/sign_in_g8"
        app:layout_constraintEnd_toEndOf="@id/sign_in_g2"
        app:layout_constraintStart_toStartOf="@id/sign_in_g1"
        app:layout_constraintTop_toTopOf="@id/sign_in_g7"
        app:layout_constraintWidth_max="320dp" />

        <TextView
            android:id="@+id/dont_have_account_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="16sp"
            android:autoSizeMinTextSize="4sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="@string/dont_have_an_account"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/sign_in_g1"
            app:layout_constraintEnd_toEndOf="@id/sign_in_g2"
            app:layout_constraintTop_toTopOf="@id/sign_in_g9"
            app:layout_constraintBottom_toBottomOf="@id/sign_in_g10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sign_in_g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0747" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sign_in_g2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9253" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sign_in_g5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3072" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sign_in_g6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sign_in_g7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7987" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sign_in_g8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8954" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sign_in_g9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9216" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sign_in_g10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sign_in_g11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sign_in_g12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sign_in_g13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sign_in_g14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23" />

</androidx.constraintlayout.widget.ConstraintLayout>