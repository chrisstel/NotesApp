<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Notes" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <!--        <item name="colorError">#44FF00</item>-->
        <item name="android:textColorHighlight">@color/grey_200</item>
        <item name="android:colorBackground">@color/light_grey</item>
        <item name="materialButtonStyle">@style/Widget.Notes.Button.Custom</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nt_somic</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Notes.Caption</item>
        <item name="textInputStyle">@style/Widget.Notes.TextInputLayout.Custom</item>
    </style>

    <style name="Theme.Notes" parent="Base.Theme.Notes" />

    <!--    Button-->
    <style name="Widget.Notes.Button.Custom" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/black</item>
        <item name="shapeAppearance">@style/buttonShape</item>
    </style>

    <style name="buttonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <!--    TextInputLayout-->
    <style name="TextAppearance.Notes.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Notes.TextInputLayout.Custom" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/black</item>
        <item name="cursorErrorColor">@color/black</item>
        <item name="cursorColor">@color/black</item>
        <item name="boxBackgroundColor">?attr/android:colorBackground</item>
    </style>
</resources>